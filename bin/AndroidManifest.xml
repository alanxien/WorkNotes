<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alan.xie.worknotes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />
    
    <!-- 屏蔽默认锁屏 -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar">
        
        <activity
            android:name="com.alan.xie.worknotes.SplashActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.alan.xie.worknotes.MainActivity" >
        </activity>
        
        <!-- 锁屏 -->
        <activity 
            android:name="com.alan.xie.worknotes.activity.lockscreen.LockScreenActivity"
            android:launchMode="singleTask" 
            android:screenOrientation="portrait">
            <!-- <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.MONKEY" />
            
            </intent-filter> -->
        </activity>
        <service 
            android:name=".service.LockScreenService">
            <intent-filter android:priority="1000"></intent-filter>
        </service>
        
        <activity 
            android:name="com.alan.xie.worknotes.activity.customloading.CustomLoadingActivity">
        </activity>
    </application>

</manifest>
